{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "vue/setup-compiler-macros": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "@vue/typescript/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "overrides": [
    {
      "files": ["src/views/**/*.vue"],
      "rules": {
        "vue/multi-word-component-names": 0
      }
    }
  ],
  "plugins": [
  ],
  "rules": {
    "semi": "error",
    "quotes": ["error", "single"]
  }
}